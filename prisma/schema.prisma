// schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Curso {
  id                   String       @id @default(auto()) @map("_id") @db.ObjectId
  nombre               String
  descripcionBreve     String
  descripcionDetallada String
  imagen               String
  valoracion           Float
  cantidadInscritos    Int
  banner               String
  unidades             Unidad[]     // Relación uno a muchos con Unidad
  comentarios          Comentario[] // Relación uno a muchos con Comentario
}

model Unidad {
  id            String  @id @default(auto()) @map("_id") @db.ObjectId
  numeroOrden   Int
  nombreUnidad  String
  cursoId       String  // Foreign key al Curso
  curso         Curso   @relation(fields: [cursoId], references: [id])
  clases        Clase[] // Relación uno a muchos con Clase
}

model Comentario {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  autor      String
  titulo     String
  detalle    String
  meGusta    Int
  noMeGusta  Int
  cursoId    String  // Foreign key al Curso
  curso      Curso   @relation(fields: [cursoId], references: [id])
}

model Clase {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  nombreClase      String
  numeroOrden      Int
  descripcionClase String
  videoUrl         String
  materiales       String[]
  unidadId         String   // Foreign key a la Unidad
  unidad           Unidad   @relation(fields: [unidadId], references: [id])
}
